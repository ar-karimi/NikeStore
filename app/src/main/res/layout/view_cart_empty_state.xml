<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?windowBackgroundColorSub"
    android:gravity="center"
    android:translationZ="10dp"
    android:id="@+id/emptyStateRootView">
    
    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:srcCompat="@drawable/ic_undraw_empty_cart"/>

    <TextView
        android:id="@+id/emptyStateMessageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAppearance="?textAppearanceHeadline5"
        android:text="@string/cartEmptyStateLoginRequired"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/emptyStateCtaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/cartEmptyStateLoginBtn"/>

</LinearLayout>